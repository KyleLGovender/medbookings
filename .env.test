# Test Environment Variables
# Copy this file to .env.test.local and modify values as needed

# Test Database URL - should be different from development database
DATABASE_URL="postgresql://medbookings_test:test_password@localhost:5433/medbookings_test"
TEST_DATABASE_URL="postgresql://medbookings_test:test_password@localhost:5433/medbookings_test"

# NextAuth Configuration for Testing
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-secret-key-for-playwright-testing"

# Mock OAuth Credentials (not real, just for testing)
GOOGLE_CLIENT_ID="mock-google-client-id"
GOOGLE_CLIENT_SECRET="mock-google-client-secret"

# Disable external services in test environment
DISABLE_EMAILS="true"
DISABLE_SMS="true"
DISABLE_WHATSAPP="true"
DISABLE_GOOGLE_CALENDAR="true"

# Test-specific settings
NODE_ENV="test"
PLAYWRIGHT_TEST="true"

# Test Configuration
TEST_TIMEOUT="30000"
TEST_HEADLESS="true"

# Logging Configuration for Tests
LOG_LEVEL="error"
DISABLE_LOGGING="true"

# File Upload Configuration for Tests
UPLOAD_DIR="./test-uploads"
MAX_FILE_SIZE="10485760"

# Rate Limiting (Disabled for Tests)
DISABLE_RATE_LIMITING="true"

# Cache Configuration (Disabled for Tests)
DISABLE_CACHE="true"