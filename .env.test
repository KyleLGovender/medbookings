# Test Environment Variables
# Copy this file to .env.test.local and modify values as needed

# Test Database URL - should be different from development database
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/medbookings_test"

# NextAuth Configuration for Testing
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-secret-key-for-e2e-testing"

# Mock OAuth Credentials (not real, just for testing)
GOOGLE_CLIENT_ID="mock-google-client-id"
GOOGLE_CLIENT_SECRET="mock-google-client-secret"

# Disable external services in test environment
DISABLE_EMAILS="true"
DISABLE_SMS="true"
DISABLE_GOOGLE_CALENDAR="true"

# Test-specific settings
NODE_ENV="test"
PLAYWRIGHT_TEST="true"